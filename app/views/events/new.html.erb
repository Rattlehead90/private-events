<div class="wrapping-div" >
  <h1 class="font-bold text-3xl">New Event</h1>
  
  <%= form_with model: @event do |form| %>
    <div>
      <%= form.label :name %><br />
      <%= form.text_field :name %>
    </div>
  
    <div>
      <%= form.label :date %><br />
      <%= form.date_field :date %>
    </div>

    <div>
      <%= form.submit "Create Event", class: "btn-attendance-control" %>
    </div>
  
  <% end %>
</div>