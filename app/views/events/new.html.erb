<div class="flex flex-col w-72 m-auto gap-8" >
  <h1 class="font-bold text-3xl">New Event</h1>
  
  <%= form_with model: @event do |form| %>
    <div>
      <%= form.label :name %><br />
      <%= form.text_field :name %>
    </div>
  
    <div>
      <%= form.label :date %><br />
      <%= form.date_field :date %>
    </div>

    <div>
      <%= form.submit "Create Event" %>
    </div>
  
  <% end %>
</div>